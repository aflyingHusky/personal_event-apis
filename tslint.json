{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-config-airbnb", "tslint:latest"],
  "linterOptions": {
    "exclude": ["node_modules"]
  },
  "jsRules": {
    "no-unused-expression": true
  },
  "rules": {
    "import-name": false,
    "align": false,
    "indent": [true, "spaces", 2],
    "no-unused-variable": [true, { "ignore-pattern": "^_" }],
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-pascal-case",
        "require-const-for-all-caps"
      ]
    },
    "function-name": [
      true,
      {
        "function-regex": "^[a-z$][\\w\\d]+$",
        "method-regex": "^[a-z$][\\w\\d]+$",
        "private-method-regex": "^[a-z$][\\w\\d]+$",
        "protected-method-regex": "^[a-z$][\\w\\d]+$",
        "static-method-regex": "^[a-z$][\\w\\d]+$"
      }
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-typecast",
      "check-rest-spread",
      "check-type",
      "check-preblock",
      "check-postbrace"
    ],
    "ban-types": [
      true,
      ["Object", "Avoid using the `Object` type. Should use `object`?"],
      ["Boolean", "Avoid using the `Boolean` type. Should use `boolean`?"],
      ["Number", "Avoid using the `Number` type. Should use `number`?"],
      ["String", "Avoid using the `String` type. Should use `string`?"],
      ["Symbol", "Avoid using the `Symbol` type. Should use `symbol`?"]
    ],
    "arrow-return-shorthand": true,
    "quotemark": [true, "single"],
    "member-access": [false],
    "ordered-imports": [false],
    "max-line-length": [true, 130],
    "member-ordering": [false],
    "interface-name": [false],
    "arrow-parens": false,
    "object-literal-sort-keys": false,
    "no-null-keyword": [false],
    "semicolon": [true, "never"],
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "unnecessary-else": [true, {"allow-else-if": false}],
    "newline-before-return": true,
    "no-default-export": false,
    "no-var-requires": false,
    "prefer-object-spread": true,
    "prefer-template": true,
    "no-empty-interface": true,
    "no-parameter-reassignment": false,
    "no-implicit-dependencies": false,
    "ter-arrow-parens": false,
    "object-shorthand-properties-first": false,
    "no-console": [false, "log", "error"],
    "no-increment-decrement": false,
    "prefer-conditional-expression": [true, "check-else-if"],
    "await-promise": true,
    "no-submodule-imports": false,
    "radix": true,
    "no-var-keyword": true,
    "early-exit": [true, { "max-length": 0, "ignore-constructor": true }],
    "jsdoc-format": false,
    "noImplicitThis": true
  },
  "rulesDirectory": []
}
